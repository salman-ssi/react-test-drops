{
  "name": "react-test-vapors",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.5.4",
    "@types/node": "^17.0.5",
    "react-scripts": "5.0.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint './src/**'",
    "eject": "react-scripts eject",
    "build": "react-scripts build",
    "start": "husky install && react-scripts start",
    "lint:fix": "eslint . --ext ts --ext tsx --ext js --fix",
    "pretty": "prettier --write --config .prettierrc './src/**'",
    "check-types": "tsc --project tsconfig.json --pretty --noEmit",
    "no-console": "eslint --rule no-console:error --fix-dry-run './src/**'",
    "husky": "yarn pretty && yarn check-types && yarn lint:fix && yarn lint && yarn no-console && yarn test && yarn build"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "eslint": "^8.5.0",
    "prettier": "^2.5.1",
    "lint-staged": "^12.1.4",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "@typescript-eslint/parser": "^5.8.1",
    "@typescript-eslint/eslint-plugin": "^5.8.1"
  }
